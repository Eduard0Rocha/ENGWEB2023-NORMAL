extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Plantas App
    .w3-card-4
      w3-container
        table.w3-table-all 
          tr
            th _id
            th Freguesia
            th Espécie 
            th Estado 
            th Número de intervenções 
          
          each item in list
              tr 
                td 
                  a(href="/" + item.Id) #{item.Id}
                td #{item.Freguesia}
                td 
                  a(href="/especies/" + item.Espécie) #{item.Espécie}
                td #{item.Estado}
                td #{item['Número de intervenções']}